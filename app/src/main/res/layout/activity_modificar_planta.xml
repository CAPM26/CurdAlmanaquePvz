<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0BA81"
    android:padding="20dp"
    tools:context=".Plantas.ModificarPlanta">

    <EditText
        android:id="@+id/et_NombrePlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre de la planta:"
        android:inputType="textPersonName"
        android:textColor="#3B3251"
        android:textColorHint="#3B3251"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_TipoPlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tipo de planta::"
        android:inputType="textPersonName"
        android:textColor="#3B3251"
        android:textColorHint="#3B3251"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_NombrePlanta" />

    <EditText
        android:id="@+id/et_FaseDesbloqueoPlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fase de desbloqueo:"
        android:inputType="textPersonName"
        android:textColor="#3B3251"
        android:textColorHint="#3B3251"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_TipoPlanta" />

    <EditText
        android:id="@+id/et_CosteSolesPlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Coste de la planta:"
        android:inputType="number"
        android:textColor="#3B3251"
        android:textColorHint="#3B3251"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_FaseDesbloqueoPlanta" />

    <Button
        android:id="@+id/btnModificarPlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#8E431A"
        android:text="Modificar"
        android:textColor="#D19830"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_CosteSolesPlanta" />

    <Button
        android:id="@+id/btnEliminarPlanta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:backgroundTint="#8E431A"
        android:text="eliminar"
        android:textColor="#D19830"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_CosteSolesPlanta" />

</androidx.constraintlayout.widget.ConstraintLayout>